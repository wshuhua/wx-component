/* 全局内边距 */
.container {
    padding: 0 20rpx;
}

/* 瀑布流布局 */
.picture {
    column-gap: 5rpx;
    column-count: 2;
    margin: 20rpx 0;
}

.item {
    width: calc(100% - 30rpx);
    break-inside: avoid;
    box-shadow: 0 5px 15px 0 rgba(0, 0, 0, 0.1);
    border-radius: 10rpx;
    margin: 0 15rpx 20rpx 15rpx;
}

.item image {
    width: 100%;
}

.data-img {
    width: 300rpx;
    height: 300rpx;
}

.tip {
    text-align: center;
}