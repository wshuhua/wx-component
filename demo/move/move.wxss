.box {
    width: 300px;
    height: 300px;
    border: 1px solid #BDBDBD;
    margin: 20px auto;
    border-radius: 4px;
    overflow: hidden;

}
.img {
    position: relative;
}
.btn {
    text-align: center;
    padding: 10px 0;
    border: 1px solid #BDBDBD;
    width: 80px;
    margin: 0 auto;
    border-radius: 4px;
}